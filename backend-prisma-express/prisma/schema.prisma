generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int    @id @default(autoincrement())
  login   String @unique
  name    String
  avatar  String?
  bio     String?
  posts   Post[]
}

model Post {
  userid  Int
  id      Int
  text    String
  user    User @relation(fields: [userid], references: [id])

  @@id([id, userid])
}
